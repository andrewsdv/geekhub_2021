<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/infoDataContainer"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:scaleType="centerCrop"
    app:layout_constraintBottom_toTopOf="@+id/actorsRecycler">

    <ImageView
        android:id="@+id/filmBackgroundImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:tint="#C8000000"
        app:layout_constraintBottom_toBottomOf="@+id/infoDataContainer"
        app:layout_constraintEnd_toEndOf="@+id/infoDataContainer"
        app:layout_constraintStart_toStartOf="@+id/infoDataContainer"
        app:layout_constraintTop_toTopOf="@+id/infoDataContainer" />

    <ImageView
        android:id="@+id/filmPosterImage"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/infoDataContainer"
        app:layout_constraintTop_toTopOf="@+id/infoDataContainer" />

    <ProgressBar
        android:id="@+id/filmRateProgressBar"
        style="@style/Widget.MaterialComponents.CircularProgressIndicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/filmCategoriesTextView"
        app:layout_constraintTop_toBottomOf="@+id/filmCategoriesTextView"/>
    <TextView
        android:id="@+id/percentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@+id/filmRateProgressBar"
        app:layout_constraintBottom_toBottomOf="@+id/filmRateProgressBar"
        app:layout_constraintStart_toStartOf="@+id/filmRateProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/filmRateProgressBar"/>
    <TextView
        android:id="@+id/filmNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/infoDataContainer"
        app:layout_constraintStart_toEndOf="@id/filmPosterImage"
        app:layout_constraintEnd_toEndOf="@+id/infoDataContainer"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/filmCategoriesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/filmNameTextView"
        app:layout_constraintStart_toEndOf="@id/filmPosterImage"
        app:layout_constraintEnd_toEndOf="@+id/infoDataContainer"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/white"/>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/filmPosterImage"
        app:layout_constraintStart_toStartOf="@id/filmPosterImage"
        app:layout_constraintEnd_toEndOf="@+id/filmNameTextView"
        app:layout_constraintBottom_toBottomOf="@+id/infoDataContainer"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
    <TextView
        android:id="@+id/filmDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/actorsRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/infoDataContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"/>
</androidx.constraintlayout.widget.ConstraintLayout>