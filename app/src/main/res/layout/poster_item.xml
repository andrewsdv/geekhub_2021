<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/filmRateProgressBar"
        style="@style/Widget.MaterialComponents.CircularProgressIndicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:progress="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationZ="1dp" />
    <TextView
        android:id="@+id/percentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:translationZ="1dp"
        app:layout_constraintTop_toTopOf="@+id/filmRateProgressBar"
        app:layout_constraintBottom_toBottomOf="@+id/filmRateProgressBar"
        app:layout_constraintStart_toStartOf="@+id/filmRateProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/filmRateProgressBar"/>
    <ImageView
        android:id="@+id/filmPosterImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>